<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(topic) do |f| %>
    
      <% if topic.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% topic.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>