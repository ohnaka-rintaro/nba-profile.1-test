<%= form_for(profile) do |f| %>

  <% if profile.errors.any? %>
    <div id="error_explantion">
      <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  
  <%= f.label :content, '説明' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>